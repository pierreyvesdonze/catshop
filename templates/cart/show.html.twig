{% extends "base.html.twig" %}
{% block body %}


<div class="container">
    <div class="section">
        <div class="row">
            {% if items | length > 0 %}
            <table class="table">
                <thead>
                    <tr>
                        <th>Article</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in items %}
                    <tr>
                        <td>{{ item.article.name }}</td>
                        <td class="item-price">{{ item.article.price }} €</td>
                        <td>
                            <input type="number" class="articles-quantity" name="cart-quantity-line" min="0" max="100" value="{{ item.quantity }}">
                        </td>
                        <td class="total-item">{{ item.article.price * item.quantity }} €</td>
                        <td>
                            <a href="#" class="button remove-from-cart-btn" data-id="{{ item.article.id }}"> Delete</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <td class="bold">Total : </td>
                        <td></td>
                        <td></td>
                        <td class="net-total">{{ total }} €</td>
                    </tr>
                </tfoot>
            </table>

            {% else %}

            <p>
                Panier vide
            </p>

            {% endif %}

        </div>
    </div>
</div>
{% endblock %}